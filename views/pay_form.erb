<div id=title>Nuovo pagamento</div>

<form action=/ method=post>
	<table class=bold>
		<tr><td>Chi</td><td><%=

		list = '<select name=who>'
		Users.each do |u|
			list += "<option value='#{u[:id]}'>#{u[:name]}</option>"
		end
		list += '</select>'

		%></td></tr>
		<tr><td>Cosa</td><td><input type=text name=what></td></tr>
		<tr><td>Quanto</td><td><input type=text name=how></td></tr>
	</table>
	<br>
	<input type=submit value='Salva pagamento'>
</form>
